extends ../layout
block content
		h1 #{widget.name}
		ul
			li ID:#{widget.sn}
			li Name:#{widget.name}
			li Price:$#{widget.price}
			li Desc:#{widget.desc}
		form(action="/widgets/#{widget.sn}" method="POST")
			input(type="hidden" value="delete" name="_method")
			input(type="submit" name="submit" value="delete")